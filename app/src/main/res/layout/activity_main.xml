<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <!-- AppBarLayout remains fixed at the top -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:fitsSystemWindows="true"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ToolbarStyle"
            app:popupTheme="@style/PopupStyle"
            app:title="@string/app_name"
            app:titleTextColor="?attr/colorOnPrimary" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- NestedScrollView to make the content below the AppBarLayout scrollable -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- LinearLayout as the direct child of NestedScrollView to arrange elements vertically -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- First row of TextViews: Total Urls crawl and Last Updated -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/vertical_guideline_inner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5" /> <!-- Using percent for responsiveness -->

                <TextView
                    android:id="@+id/tvTotalRecords"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng số Urls crawl:"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvNumTongUrls"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:ems="4"
                    android:maxEms="12"
                    android:text="0"
                    android:textSize="16sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tvTotalRecords"
                    app:layout_constraintStart_toEndOf="@+id/tvTotalRecords" />

                <TextView
                    android:id="@+id/tvLabelDateUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cập nhật lần cuối:"
                    android:textColor="@color/purple_500"
                    android:textSize="14dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/vertical_guideline_inner" />

                <!-- You might want to add a TextView for the actual date here -->
                <TextView
                    android:id="@+id/tvDateUpdateValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="N/A"
                    android:textColor="@color/purple_500"
                    android:textSize="16sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tvLabelDateUpdate"
                    app:layout_constraintStart_toEndOf="@+id/tvLabelDateUpdate" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Two-column layout for linear2 and linear3 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/vertical_guideline_middle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/linear2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/border"
                    android:padding="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/vertical_guideline_middle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <TextView
                        android:id="@+id/tvCurrentCrawlType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phương pháp crawl: Đang tải..."
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        android:id="@+id/tvChenhLechK1K0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Số URLs thực hiện:"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvCurrentCrawlType" />
                    <TextView
                        android:id="@+id/tvFromK0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Từ:"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvChenhLechK1K0" />
                    <EditText
                        android:id="@+id/editNumFromK0"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:hint="Bao gồm số TỪ >= 0"
                        android:inputType="number"
                        android:text="0"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tvFromK0"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tvFromK0" />
                    <TextView
                        android:id="@+id/tvToK1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Đến:"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvFromK0" />
                    <EditText
                        android:id="@+id/editNumToK1"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:hint="Không gồm số ĐẾN > số TỪ"
                        android:inputType="numberSigned"
                        android:text="-1"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tvToK1"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tvToK1" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/linear3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/border"
                    android:padding="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/vertical_guideline_middle"
                    app:layout_constraintTop_toTopOf="parent">
                    <TextView
                        android:id="@+id/tvThreadsWaiting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số luồng đang chờ đợi:"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        android:id="@+id/tvNumThreadsWaiting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="0"
                        android:textSize="14sp"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tvThreadsWaiting"
                        app:layout_constraintStart_toEndOf="@+id/tvThreadsWaiting" />
                    <TextView
                        android:id="@+id/tvTaskVuQueuedTasks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Số task đang chờ xử lý:"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvThreadsWaiting" />
                    <TextView
                        android:id="@+id/tvNumTaskVuQueuedTasks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="0"
                        android:textSize="14sp"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tvTaskVuQueuedTasks"
                        app:layout_constraintStart_toEndOf="@+id/tvTaskVuQueuedTasks" />
<!--                    android:visibility="gone"-->
                    <TextView
                        android:id="@+id/tvSoUrlErrors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Số View Errors:"

                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvTaskVuQueuedTasks" />
<!--            android:visibility="gone"-->
                    <Button
                        android:id="@+id/btnViewErrors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="View Errors:"

                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvSoUrlErrors" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tvCrawlerStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Trạng thái Crawler: Chưa bắt đầu"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!-- Progress section -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <!-- Guidelines -->
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.33" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_66"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.66" />

                <!-- Left -->
                <TextView
                    android:id="@+id/tvSumProcessedUrls"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số Crawled Urls: "
                    android:textColor="@color/purple_500"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guideline_33"
                    app:layout_constraintHorizontal_bias="0.0" />

                <!-- Center -->
                <TextView
                    android:id="@+id/tvSoUrlTrenTotalUrl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SoUrl/TotalUrl"
                    android:textColor="@color/purple_500"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@id/guideline_33"
                    app:layout_constraintEnd_toStartOf="@id/guideline_66"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.5" />

                <!-- Right -->
                <TextView
                    android:id="@+id/progressPercentText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@id/guideline_66"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="1.0" />

                <!-- ProgressBar bên dưới -->
                <ProgressBar
                    android:id="@+id/pbCrawlerProgress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:progressTint="@color/blue"
                    app:layout_constraintTop_toBottomOf="@id/progressPercentText"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <!-- Layout for Elapsed Times and Time Remaining -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvElapsedTimes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Elapsed times: 00:00"
                    android:textColor="@color/purple_500"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvTimeRemaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time Remaining: 00:00"
                    android:textColor="@color/purple_500"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBaseline_toBaselineOf="@id/tvElapsedTimes" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/tvInfoUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:lineSpacingMultiplier="1.5"
                android:text="Info Url"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnCrawlData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:enabled="true"
                android:text="Start Crawl" />

<!--            android:visibility="gone"-->
            <Button
                android:id="@+id/btnCancelCrawler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:enabled="false"
                android:visibility="gone"
                android:text="Hủy Crawler" />

            <TextView
                android:id="@+id/tvExcelStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Trạng thái Export: Chưa xuất file"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvLabelChenhTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Time create file excel:"
                android:textColor="@color/purple_500"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spinnerSelectExcelFile"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp" />

            <Button
                android:id="@+id/btnExportExcel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Create File Excel" />

            <Button
                android:id="@+id/btnOpenAndShareFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Open &amp; Share File Excel" />

            <Button
                android:id="@+id/btnOpenFolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Open Directory" />

            <!-- Two buttons at the bottom, using a ConstraintLayout for horizontal weight -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/gridlayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"> <!-- Add some bottom margin for spacing -->

                <Button
                    android:id="@+id/btnEnableCrawler"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Enable bnt Crawler"
                    app:layout_constraintEnd_toStartOf="@+id/btnSqlDelete"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btnSqlDelete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Delete records SQLite"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@+id/btnEnableCrawler"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
